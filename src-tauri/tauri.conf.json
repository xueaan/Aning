{
  "productName": "Anning",
  "version": "0.1.0",
  "identifier": "com.noteapp.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5000",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": ["icons/icon.ico"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installMode": "currentUser",
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false,
        "compression": "lzma"
      }
    },
    "longDescription": "Anning - 智能笔记系统，本地优先的个人知识管理平台，提供模块化的笔记体验",
    "shortDescription": "Anning 智能笔记系统"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Anning",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "maximized": false,
        "visible": true,
        "center": true,
        "decorations": false,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "theme": "Dark",
        "dragDropEnabled": false,
        "hiddenTitle": true,
        "additionalBrowserArgs": "--enable-gpu-rasterization --enable-zero-copy --enable-hardware-overlays --enable-gpu-compositing --enable-oop-rasterization --disable-features=VizStorageTextures --disable-software-compositing-fallback --disable-background-timer-throttling --disable-renderer-backgrounding --disable-features=TranslateUI"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application capabilities",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:window:allow-set-title",
            "core:window:allow-maximize",
            "core:window:allow-minimize",
            "core:window:allow-unmaximize",
            "core:window:allow-toggle-maximize",
            "core:window:allow-close",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-is-maximized",
            "core:window:allow-is-minimized",
            "core:window:allow-set-focus",
            "core:window:allow-start-dragging",
            "core:window:allow-internal-toggle-maximize",
            "core:window:default",
            "core:event:allow-listen",
            "core:event:allow-unlisten",
            "core:event:allow-emit",
            "core:event:default",
            "core:app:allow-name",
            "core:app:allow-version",
            "shell:allow-open",
            "core:tray:default",
            "core:menu:default"
          ]
        }
      ]
    }
  },
  "plugins": {}
}